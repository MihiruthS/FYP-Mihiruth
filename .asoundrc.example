# ALSA Configuration for ReSpeaker 4 Mic Array
# Place this file at ~/.asoundrc or /etc/asound.conf

# Set ReSpeaker as default device
pcm.!default {
    type asym
    playback.pcm "plughw:0,3"    # Jetson HDMI audio output
    capture.pcm "plughw:2,0"      # ReSpeaker 4 Mic Array (card 2)
}

ctl.!default {
    type hw
    card 2  # ReSpeaker
}

# ReSpeaker optimized capture
pcm.respeaker {
    type plug
    slave {
        pcm "hw:2,0"
        rate 16000
        channels 1
    }
}

# Better compatibility
pcm.dmixer {
    type dmix
    ipc_key 1024
    slave {
        pcm "hw:0,3"
        period_time 0
        period_size 1024
        buffer_size 8192
        rate 48000
    }
    bindings {
        0 0
        1 1
    }
}
